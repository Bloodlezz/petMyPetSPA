{{> header}}

<section class="deletePet">
    <h3>{{pet.name}}</h3>
    <p>Pet counter: <i class="fas fa-heart"></i> {{likesCounter pet.likes}}</p>
    <p class="img"><img src="{{pet.imageURL}}"></p>
    <form action="#/pet/remove/{{pet._id}}" method="POST">
        <p class="description">{{pet.description}}</p>
        <button class="button">Delete</button>
    </form>
</section>

{{> footer}}